<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cv_hero"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="6dp"
    android:background="@drawable/round_cardview"
    style="@style/CardStyle"
    app:cardCornerRadius="15sp">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/CardStyle"
        android:orientation="vertical"
        android:padding="6dp">

        <TextView
            android:id="@+id/nama_hero"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="30dp"
            android:layout_toRightOf="@+id/gambarnya"
            android:ellipsize="end"
            android:fontFamily="@font/donat"
            android:text="@string/name"
            style="@style/textStyle"
            android:textSize="25sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/nama_hero"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/gambarnya"
            style="@style/textStyle"
            android:ellipsize="end"
            android:fontFamily="@font/donat"
            android:text="@string/id"
            android:textSize="15sp" />

        <RelativeLayout
            android:id="@+id/gambarnya"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="0dp"
            android:background="@drawable/round_img">

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_fotoDetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="15dp"
                app:cardElevation="0dp">

                <ImageView
                    android:id="@+id/gambar"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:background="@color/white"
                    android:padding="5dp"
                    android:src="@drawable/github" />
            </androidx.cardview.widget.CardView>
        </RelativeLayout>
    </RelativeLayout>

</com.google.android.material.card.MaterialCardView>